<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spotify Clone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");

      body {
        font-family: "Roboto", sans-serif;
      }

      .custom-scrollbar::-webkit-scrollbar {
        width: 12px;
      }

      .custom-scrollbar::-webkit-scrollbar-track {
        background: #333;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #666;
        border-radius: 6px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #888;
      }

      .invert-filter {
        filter: invert(1);
      }

      .playing {
        background-color: rgb(0, 0, 0);
        filter: invert();
      }

      .card-hover:hover {
        background-color: #1b1a1a;
      }

      .card-hover:hover .play-button {
        opacity: 1;
        bottom: 35%;
      }

      .play-button {
        position: absolute;
        right: 10%;
        bottom: 32%;
        opacity: 0;
        transition: all 0.5s ease-out;
      }

      .seekbar-circle {
        position: absolute;
        bottom: -6px;
        left: -2px;
        transition: left 0.5s;
      }

      .left-sidebar {
        transition: all 0.3s ease;
      }

      /* Mobile sidebar - hidden by default, shown when toggled */
      @media (max-width: 768px) {
        .left-sidebar {
          position: fixed;
          left: -100%;
          z-index: 50;
          width: 280px;
          height: 100vh;
        }

        .left-sidebar.show {
          left: 0;
        }

        .main-content {
          width: 100%;
        }
      }

      /* Tablet and desktop - sidebar always visible */
      @media (min-width: 769px) {
        .left-sidebar {
          position: relative;
          left: 0;
          width: 25%;
        }

        .main-content {
          width: 75%;
        }
      }

      /* Overlay for mobile when sidebar is open */
      .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 40;
        display: none;
      }

      .sidebar-overlay.show {
        display: block;
      }
    </style>
  </head>
  <body class="bg-black text-white m-0 p-0">
    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="flex h-screen">
      <!-- Left Sidebar -->
      <div class="left-sidebar p-2 bg-black" id="leftSidebar">
        <div class="mb-4">
          <div class="flex justify-between items-center mb-2">
            <img
              class="invert-filter w-15 h-8"
              src="/img/logo.svg"
              alt="Spotify Logo"
            />
          </div>
          <ul class="bg-gray-800 text-gray-400 rounded-lg p-4 space-y-3">
            <li
              class="flex items-center gap-4 cursor-pointer hover:text-white transition-colors"
            >
              <i class="fas fa-home w-6 h-6"></i>
              <a href="/">Home</a>
            </li>
            <li
              class="flex items-center gap-4 cursor-pointer hover:text-white transition-colors"
            >
              <i class="fas fa-search w-6 h-6"></i>
              <span>Search</span>
            </li>
          </ul>
        </div>

        <div class="flex flex-col bg-gray-800 rounded-lg min-h-0 flex-1">
