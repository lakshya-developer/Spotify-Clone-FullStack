            class="flex items-center justify-between p-4 border-b border-gray-700"
          >
            <div
              class="flex items-center gap-3 cursor-pointer hover:text-white transition-colors"
            >
              <i class="fas fa-book w-6 h-6"></i>
              <span>Your library</span>
            </div>
            <div class="flex gap-2">
              <div
                class="w-8 h-8 rounded-full flex items-center justify-center hover:bg-gray-700 cursor-pointer transition-colors"
              >
                <i class="fa-solid fa-plus text-sm"></i>
              </div>
              <div
                class="w-8 h-8 rounded-full flex items-center justify-center hover:bg-gray-700 cursor-pointer transition-colors"
              >
                <i class="fa-solid fa-arrow-right text-sm"></i>
              </div>
            </div>
          </div>

          <div class="flex-1 overflow-y-auto custom-scrollbar p-4">
            <ul class="space-y-3" id="playlistContainer">
              <!-- Playlist items will be populated by JavaScript -->
            </ul>
          </div>
        </div>
      </div>

      <!-- Right Main Content -->
      <div class="main-content bg-gray-900 flex flex-col">
        <!-- Navigation -->
        <div
          class="bg-gray-800 h-20 flex items-center justify-end px-6 rounded-lg m-2"
        >
          <div class="flex items-center gap-4">
            <a
              href="/sign-up"
              class="bg-white text-black px-4 py-2 rounded-full text-sm font-bold cursor-pointer hover:px-5 hover:py-2.5 hover:text-base transition-all"
            >
              Sign Up
            </a>
            <a
              href="/login"
              class="bg-gray-700 px-4 py-2 rounded-full text-sm font-bold cursor-pointer hover:px-5 hover:py-2.5 transition-all hidden md:block"
            >
              Login
            </a>
            <div
              class="bg-gray-700 px-4 py-2 rounded-full text-sm font-bold cursor-pointer hover:px-5 hover:py-2.5 transition-all hidden md:flex items-center gap-2"
            >
              <i class="fa-regular fa-circle-down text-white"></i>
              <span>Install App</span>
            </div>
            <div
              class="bg-gray-800 w-10 h-10 rounded-full flex items-center justify-center cursor-pointer hover:w-12 hover:h-12 transition-all"
            >
              <i class="fa-regular fa-bell text-white"></i>
            </div>
            <div
              class="w-8 h-8 bg-gray-700 rounded-full flex items-center justify-center cursor-pointer hover:w-10 hover:h-10 transition-all"
            >
              <i class="fa-regular fa-user text-white"></i>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-4 overflow-y-auto custom-scrollbar">
          <h2 class="text-2xl font-bold mb-6">Spotify Playlist</h2>
          <div
            class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
            id="cardContainer"
          >
            <!-- Cards will be populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

    <!-- Fixed Player Bar -->
    <div
      class="fixed bottom-5 left-1/2 transform -translate-x-1/2 w-3/4 bg-gray-800 rounded-lg p-4"
    >
      <div class="flex items-center justify-between mb-2">
        <div class="flex-1">
          <div class="songinfo text-sm">
            <div class="text-white font-medium">Song Title</div>
            <div class="text-gray-400 text-sm">Artist Name</div>
          </div>
        </div>

        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <img
              id="volume-img"
              class="invert-filter w-5 h-5 cursor-pointer"
              src="data:image/svg+xml;base64,"
              alt="Volume"
            />
            <input
              class="w-20 cursor-pointer"
              type="range"
              name="volume"
              value="100"
            />
          </div>

          <div class="flex items-center gap-4">
            <img
